<%= form_with(model: student, html: { class: "form", id: "registrationForm" }) do |form| %>
<div class="form-group">
    <%= form.label :lastname, "Nom:", class: "col-lg-3 control-label" %>
    <div class="col-lg-8">
        <%= form.text_field :lastname, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= form.label :firstname, "Prénom:", class: "col-lg-3 control-label" %>
    <div class="col-lg-8">
        <%= form.text_field :firstname, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= form.label :birthdate, "Date de naissance:", class: "col-lg-3 control-label" %>
    <div class="col-lg-8">
        <%= form.date_field :birthdate, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= form.label :tel, "Mobile:", class: "col-lg-3 control-label" %>
    <div class="col-lg-8">
        <%= form.text_field :tel, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= form.label :address, "Addresse:", class: "col-lg-3 control-label" %>
    <div class="col-lg-8">
        <%= form.text_field :address, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <label class="col-md-3 control-label"></label>
    <div class="col-md-8">
        <span></span>
        <%= form.submit "Mettre à jour", class: "btn btn-primary" do %>
        Mettre à jour
        <% end %>
        <input type="reset" class="btn btn-default" value="Cancel">
    </div>
</div>
<% end %>