<%
def level_blank(level)
  5 - level
end
%>

<center>
    <h1 style="text-decoration: underline; text-transform: uppercase;">student 1</h1>
</center>
<div class="links">
    <nav class="nav flex-column">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <%= link_to "Aperçu", @cv, method: :get, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Editer", edit_cv_path(@cv), method: :get, class: "nav-link active" %>
            </li>
            <li class="nav-item">
                <a class="update nav-link" href="#" id="update">Maj</a>
            </li>
        </ul>
    </nav>
</div>
<div class="">
    <div class="cv container">
        <%= form_for @cv, method: :patch, html: {class: "updateCV", id: "updateCV"} do |f| %>
        <center>
            <h1>Mon Curriculum Vitae</h1>
        </center>
        <section class="row">
            <div class="avatar col-md-4">
                <% avatar = @student.sexe == 'Homme' ? 'profilh.png' : 'profilf.png' %>
                <div class="text-center">
                    <%= image_tag avatar, class: "img-thumbnail rounded float-left" %>
                </div>
            </div>
            <div class="summary right container col-md-8">
                <h2>
                    <%= f.label :summary, "Résumé" %>
                </h2>
                <div id="<%= @cv.id %>" class="summary field">
                    <%= f.text_area :summary, value: @cv.summary, class: "form-control" %>
                </div>
            </div>
        </section>
        <!-- <hr> -->
        <section class="row">
            <div class="student_infos col-md-5">
                <h2>
                    <%= f.text_field :developer_type, class: "form-control" %>
                </h2>
                <table class="table table-primary">
                    <tr>
                        <th>Nom complet</th>
                        <td>
                            <%= @student.lastname %>
                            <%= @student.firstname %>
                        </td>
                    </tr>
                    <tr>
                        <th>Date de naissance</th>
                        <td>
                            <%= tag.time l(@student.birthdate, format: :long) %>
                        </td>
                    </tr>
                    <tr>
                        <th>Contact</th>
                        <td>
                            <%= @student.tel %>
                        </td>
                    </tr>
                    <tr>
                        <th>Addresse</th>
                        <td>
                            <%= @student.address %>
                        </td>
                    </tr>
                    <tr>
                        <th>Sexe</th>
                        <td>
                            <%= @student.sexe %>
                        </td>
                    </tr>
                    <tr>
                        <th>Etat civil</th>
                        <td>
                            <%= @student.marital_status %>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="right col-md-7">
                <h2>
                    <%= f.label :experiences, "Experiences" %>
                </h2>
                <div class="experiences row" style="display: block;">
                    <% @cv.experiences.each do |ex| %>
                    <% if ex %>
                    <div id="experience<%= ex.id %>" class="field experience old form-group col-md-4 row">
                        <input type="text" id="exp<%= ex.id %>0" name="expnames[name<%= ex.id %>]" class="form-control" value="<%= ex.name %>">
                        <div class="actions collapse row">
                            <div class="col-md-10" style="padding: 0 0 0 2%;">
                                <textarea id="exp<%= ex.id %>1" name="expdescriptions[description<%= ex.id %>]" class="level form-control col-md-10"><%= ex.description %></textarea>
                            </div>
                            <div class="col-md-2" style="padding: 0 0 0 2%;">
                                <a id="rmexperience<%= ex.id %>" class="remove-me"><i class="fa fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <div class="">
                    <a href="#" id="experiences" class="add-more btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </section>
        <!-- <hr> -->
        <section class="row">
            <div class="col-md-5">
                <h2>
                    <%= f.label :programming_languages, "Connaissances Techniques" %>
                </h2>
                <div class="programming_languages row">
                    <% @cv.programming_languages.each do |programming_language| %>
                    <% if programming_language %>
                    <div id="programming_language<%= programming_language.id %>" class="field programming_language old form-group col-md-4 row">
                        <input type="text" id="programming_language<%= programming_language.id %>0" name="programming_languagenames[name<%= programming_language.id %>]" class="form-control" value="<%= programming_language.name %>">
                        <div class="actions collapse row">
                          <div class="col-md-10" style="padding-left: 0;">
                            <% programming_language.level.to_i.times do  %>
                                <span class="glyphicon glyphicon-star col-md-2" style="padding-left: 5%;position: relative;top: 2px;margin: 0 1%; color: gold;"></span>
                            <% end %>
                            <% level_blank(programming_language.level.to_i).times do  %>
                                <span class="glyphicon glyphicon-star-empty col-md-2" style="padding-left: 5%;position: relative;top: 2px;margin: 0 1%; color: gold;"></span>
                            <% end %>
                          </div>
                          <div class="col-md-2" style="padding: 0;">
                            <a id="rmprogramming_language<%= programming_language.id %>" class="remove-me"><i class="fa fa-trash"></i></a>
                          </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <a href="#" id="programming_languages" class="add-more btn btn-primary"><i class="fas fa-plus"></i></a>
            </div>
            <div class="right col-md-7">
                <h2>
                    <%= f.label :skills, "Compétences" %>
                </h2>
                <div class="skills row">
                    <% @cv.skills.each do |skill| %>
                    <% if skill %>
                    <div id="skill<%= skill.id %>" class="field skill old form-group col-md-4 row">
                        <input type="text" id="skill<%= skill.id %>0" name="skillnames[name<%= skill.id %>]" class="form-control" value="<%= skill.name %>">
                        <div class="actions collapse row">
                            <div class="col-md-2" style="padding: 0 0 0 2%;">
                                <a id="rmskill<%= skill.id %>" class="remove-me"><i class="fa fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <a href="#" id="skills" class="add-more btn btn-primary"><i class="fas fa-plus"></i></a>
            </div>
        </section>
        <section class="row">
            <div class="col-md-5">
                <h2>
                    <%= f.label :languages, "Langues" %>
                </h2>
                <div class="languages row">
                    <% @cv.languages.each do |language| %>
                    <% if language %>
                    <div id="language<%= language.id %>" class="field language old form-group col-md-4 row">
                        <input type="text" id="language<%= language.id %>0" name="languagenames[name<%= language.id %>]" class="form-control" value="<%= language.name %>">
                        <div class="actions collapse row">
                          <div class="col-md-10" style="padding-left: 0;">
                            <% language.level.to_i.times do  %>
                                <span class="glyphicon glyphicon-star col-md-2" style="padding-left: 5%;position: relative;top: 2px;margin: 0 1%; color: gold;"></span>
                            <% end %>
                            <% level_blank(language.level.to_i).times do  %>
                                <span class="glyphicon glyphicon-star-empty col-md-2" style="padding-left: 5%;position: relative;top: 2px;margin: 0 1%; color: gold;"></span>
                            <% end %>
                          </div>
                          <div class="col-md-2" style="padding: 0;">
                            <a id="rmlanguage<%= language.id %>" class="remove-me"><i class="fa fa-trash"></i></a>
                          </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <a href="#" id="languages" class="add-more btn btn-primary"><i class="fas fa-plus"></i></a>
            </div>
            <div class="right col-md-7">
                <div class="hobbies">
                    <h2>
                        <%= f.label :hobbies, "Passe temps" %>
                    </h2>
                    <div id="<%= @cv.id %>" class="field hobbies">
                        <%= f.text_area :hobbies, value: @cv.hobbies, class: "form-control" %>
                    </div>
                </div>
            </div>
        </section>
        <hr>
        <% end %>
    </div>
</div>
<% content_for :head_tag do %>
<script>
$(document).ready(function($) {
    function updateCV(){
      $(`a#update`).click(function(event) {
        event.preventDefault();
        $(`form#updateCV`).submit();
      });
    }
    updateCV();

    $(".add-more").click(function(e) {
        e.preventDefault();

        let id = this.id;

        let div = $(`div.${id}:first`);
        let children = $(`div.${id}:first div.${id.slice(0, this.id.length-1)}`);

        let newInput;

        if (id == "experiences") {
            newID = children.length + 1;
            newInput = `
              <div id="experience${newID}" class="field experience new form-group col-md-4 row">
                <input type="text" id="exp${newID}0" name="expnames[name${newID}]" class="form-control">
                <div class="actions collapse row">
                  <div class="col-md-10" style="padding: 0 0 0 2%;">
                    <textarea id="exp${newID}1" name="expdescriptions[description${newID}]" class="level form-control col-md-10"></textarea>
                  </div>
                  <div class="col-md-2" style="padding: 0 0 0 2%;">
                    <a id="rmexperience${newID}" class="remove-me"><i class="fa fa-trash"></i></a>
                  </div>
                </div>
              </div>
            `;
        } else if (id == "skills") {
            newID = children.length + 1;
            newInput = `
              <div id="skill${newID}" class="field skill new form-group col-md-4 row">
                <input type="text" id="skill${newID}0" name="skillnames[name${newID}]" class="form-control">
                <div class="actions collapse row">
                  <div class="col-md-2" style="padding: 0 0 0 2%;">
                    <a id="rmskill${newID}" class="remove-me"><i class="fa fa-trash"></i></a>
                  </div>
                </div>
              </div>
            `;
        } else if (id == "languages") {
            newID = children.length + 1;
            newInput = `
              <div id="language${newID}" class="field language new form-group col-md-4 row">
                <input type="text" id="language${newID}0" name="languagenames[name${newID}]" class="form-control">
                <div class="actions collapse row">
                  <div class="col-md-12 row" style="padding-right: 0;">
                    <% 3.times do %>
                    <div class="col-md-2" style="padding: 0 10px 0 10px;">
                      <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                    </div>
                    <% end %>
                    <% 2.times do %>
                    <div class="col-md-2" style="padding: 0 10px 0 10px;">
                      <span class="glyphicon glyphicon-star-empty" style="color: gold;"></span>
                    </div>
                    <% end %>
                  </div>
                  <div class="col-md-2" style="padding: 0 0 0 2%;">
                    <a id="rmlanguage${newID}" class="remove-me" style="float: right;"><i class="fa fa-trash"></i></a>
                  </div>
                </div>
              </div>
            `;
        } else if (id == "programming_languages") {
            newID = children.length + 1;
            newInput = `
              <div id="programming_language${newID}" class="field programming_language new form-group col-md-4 row">
                <input type="text" id="programming_language${newID}0" name="programming_languagenames[name${newID}]" class="form-control">
                <div class="actions collapse row">            
                  <div class="col-md-12 row" style="padding-right: 0;">
                    <% 3.times do %>
                    <div class="col-md-2" style="padding: 0 10px 0 10px;">
                    <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                    </div>
                    <% end %>
                    <% 2.times do %>
                    <div class="col-md-2" style="padding: 0 10px 0 10px;">
                    <span class="glyphicon glyphicon-star-empty" style="color: gold;"></span>
                    </div>
                    <% end %>
                  </div>
                  <div class="col-md-2" style="padding: 0 0 0 2%;">
                    <a id="rmprogramming_language${newID}" class="remove-me" style="float: right;"><i class="fa fa-trash"></i></a>
                  </div>
                </div>
              </div>
            `;
        } else {
            newInput = ``;
        }

        $(div).append(newInput);

        destroyDiv();
        toggleActions();
        updateDiv();
    });

    function destroyDiv() {
        $(".remove-me").click(function(e) {
            e.preventDefault();
            let id = this.id.slice(2, this.id.length);
            let div = $(this).parents('.field:first');
            div.fadeOut('slow', function() {
                div.remove();

                if (div.hasClass('old')) {
                    let $ID;

                    if (div.hasClass('experience')) {
                      $ID = div.attr('id').slice('experience'.length, div.attr('id').length);
                      $.ajax({
                        url: `/experiences/${$ID}`,
                        method: 'DELETE',
                        data: {
                          "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                          id: $ID
                        }
                      });
                    }
                    if (div.hasClass('skill')) {
                      $ID = div.attr('id').slice('skill'.length, div.attr('id').length);
                      $.ajax({
                        url: `/skills/${$ID}`,
                        method: 'DELETE',
                        data: {
                          "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                          id: $ID
                        }
                      });
                    }
                    if (div.hasClass('programming_language')) {
                      $ID = div.attr('id').slice('programming_language'.length, div.attr('id').length);
                      $.ajax({
                        url: `/programming_languages/${$ID}`,
                        method: 'DELETE',
                        data: {
                          "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                          id: $ID
                        }
                      });
                    }
                    if (div.hasClass('language')) {
                      $ID = div.attr('id').slice('language'.length, div.attr('id').length);
                      $.ajax({
                        url: `/languages/${$ID}`,
                        method: 'DELETE',
                        data: {
                          "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                          id: $ID
                        }
                      });
                    }
                }
            });
        });
    }
    destroyDiv();

    function updateDiv() {
        $(`input`).focusout(function(event) {
            let div = $(this).parents('.field:first');
            if (div.hasClass('old')) { // update
                let $ID, $NAME, $URL;
                $NAME = this.value;
                if (div.hasClass('experience')) {
                    $ID = div.attr('id').slice('experience'.length, div.attr('id').length);
                    $URL = `/experiences/${$ID}`;
                }
                else if (div.hasClass('skill')) {
                    $ID = div.attr('id').slice('skill'.length, div.attr('id').length);
                    $URL = `/skills/${$ID}`;
                }
                else if (div.hasClass('programming_language')) {
                    $ID = div.attr('id').slice('programming_language'.length, div.attr('id').length);
                    $URL = `/programming_languages/${$ID}`;
                }
                $.ajax({
                  url: $URL,
                  type: 'PATCH',
                  data: {
                    "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                    id: $ID,
                    name: $NAME
                  }
                });
            } else if (div.hasClass('new')) { // create
                let $CVID, $NAME, $URL;
                $CVID = <%= @cv.id %>;
                $NAME = this.value;
                if (div.hasClass('experience')) {
                    $URL = `/experiences`;
                } else if (div.hasClass('skill')) {
                    $URL = `/skills`;
                } else if (div.hasClass('programming_language')) {
                    $URL = `/programming_languages`;
                } else if (div.hasClass('language')) {
                    $URL = `/languages`;
                }

                $.ajax({
                  url: $URL,
                  type: 'POST',
                  data: {
                    "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                    cv_id: $CVID,
                    name: $NAME
                  }
                });

                div.addClass('old');
            }
        });
        $(`textarea`).focusout(function(event) {
            let div = $(this).parents('.field:first');

            $(`a#update`).css({
              'background-color': 'gold',
              'text-transform': 'uppercase'
            });

            if (div.hasClass('old')) {
                let $ID, $CONTENT, $URL;
                $CONTENT = this.value;
                if (div.hasClass('experience')) {
                    $ID = div.attr('id').slice(10, div.attr('id').length);
                    $URL = `/experiences/${$ID}`;
                }

                $.ajax({
                    url: $URL,
                    type: 'PATCH',
                    data: {
                      "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                      id: $ID,
                      description: $CONTENT
                    }
                });
            }
        });
        $(`span.glyphicon`).click(function(event) {
          let div = $(this).parents('.field:first');

            $(`a#update`).css({
              'background-color': 'gold',
              'text-transform': 'uppercase'
            });

            if (div.hasClass('old')) {
                let $ID, $LEVEL, $URL;
                let parent = $(this).parent('div');
                let siblings = parent.children('span.glyphicon');

                $LEVEL = Number(siblings.index(this))+1;

                for (let i = siblings.length - 1; i >= 0; i--) {
                  if (siblings.index(siblings.eq(i)) <= siblings.index(this)) {
                    siblings.eq(i).removeClass('glyphicon-star-empty');
                    siblings.eq(i).addClass('glyphicon-star');
                  } else{
                    siblings.eq(i).removeClass('glyphicon-star');
                    siblings.eq(i).addClass('glyphicon-star-empty');
                  }
                }
                
                if (div.hasClass('language')) {
                    $ID = div.attr('id').slice('language'.length, div.attr('id').length);
                    $URL = `/languages/${$ID}`;
                } else if (div.hasClass('programming_language')) {
                    $ID = div.attr('id').slice('programming_language'.length, div.attr('id').length);
                    $URL = `/programming_languages/${$ID}`;
                }

                $.ajax({
                    url: $URL,
                    type: 'PATCH',
                    data: {
                      "authenticity_token": "9Xp2v2K7zXdrn9sM8P6O2dLgi0Nfc75jR6kK5pUA+bAGOmIIuNGCJmYoDeQznR9KskeKn+VFPbkSsA8ZLSm76g==",
                      id: $ID,
                      level: $LEVEL
                    }
                });
            }
        });
    }
    updateDiv();

    function toggleActions() {
        $(`.field`).hover(function() {
            let actions = $(this).children('.actions:first');
            actions.slideDown('fast');
        }, function() {
            let actions = $(this).children('.actions:first');
            actions.slideUp('fast');
        });
    }
    toggleActions();
})
</script>
<% end %>
