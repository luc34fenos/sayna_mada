    <div class="container">
        <center>
            <h1>Mon Curriculum Vitae</h1>
        </center>
        <section class="row">
            <div class="avatar col-md-4">
                <% avatar = cv.student.sexe == 'Homme' ? 'profilh.png' : 'profilf.png' %>
                <div class="text-center">
                    <%= image_tag avatar, class: "img-thumbnail rounded float-left" %>
                </div>
            </div>
            <div class="summary col-md-8">
                <h2>
                    <label>Résumé</label>
                </h2>
                <p class="summary">
                    <%= cv.summary %>
                </p>
            </div>
        </section>
        <!-- <hr> -->
        <section class="row">
            <div class="student_infos col-md-5">
                <h2>
                    <%= cv.developer_type %>
                </h2>
                <table class="table table-primary">
                    <tr>
                        <th>Nom complet</th>
                        <td>
                            <%= cv.student.lastname %>
                            <%= cv.student.firstname %>
                        </td>
                    </tr>
                    <tr>
                        <th>Date de naissance</th>
                        <td>
                            <%= tag.time l(cv.student.birthdate, format: :long) %>
                        </td>
                    </tr>
                    <tr>
                        <th>Contact</th>
                        <td>
                            <%= cv.student.tel %>
                        </td>
                    </tr>
                    <tr>
                        <th>Addresse</th>
                        <td>
                            <%= cv.student.address %>
                        </td>
                    </tr>
                    <tr>
                        <th>Sexe</th>
                        <td>
                            <%= cv.student.sexe %>
                        </td>
                    </tr>
                    <tr>
                        <th>Etat civil</th>
                        <td>
                            <%= cv.student.marital_status %>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="right col-md-7">
                <h2>
                    <%= "Experiences" %>
                </h2>
                <div class="experiences" style="display: block;">
                    <table class="table table-responsive">
                        <% cv.experiences.each do |ex| %>
                        <% if ex %>
                        <tr class="table table-condensed">
                            <th>
                                <%= ex.name %>
                            </th>
                            <td>
                                <%= ex.description %>
                            </td>
                        </tr>
                        <% end %>
                        <% end %>
                    </table>
                </div>
            </div>
        </section>
        <!-- <hr> -->
        <section class="row">
            <div class="col-md-5">
                <h2>
                    <%= "Techniques" %>
                </h2>
                <div class="programming_languages">
                    <ul class="list-group">
                        <% cv.programming_languages.each do |programming_language| %>
                        <% if programming_language %>
                        <li class="list-item" style="list-style: ">
                            <%= programming_language.name %><% programming_language.level.to_i.times do  %><span class="glyphicon glyphicon-star"></span><% end %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class="col-md-7">
                <h2>
                    <%= "Compétences" %>
                </h2>
                <div class="skills">
                    <ul class="list-group">
                        <% cv.skills.each do |skill| %>
                        <% if skill %>
                        <li class="list-item">
                            <%= skill.name %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
        </section>
        <section class="row">
            <div class="col-md-5">
                <h2>
                    <%= "Langues" %>
                </h2>
                <div class="languages">
                    <ul class="list-group">
                        <% cv.languages.each do |language| %>
                        <% if language %>
                        <li class="list-item">
                            <%= language.name %>
                            <% language.level.to_i.times do  %>
                                <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                            <% end %>
                            <% level_blank(language.level.to_i).times do  %>
                                <span class="glyphicon glyphicon-star-empty" style="color: gold;"></span>
                            <% end %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class="right col-md-7">
                <div class="hobbies">
                    <h2>
                        <%= "Passe temps" %>
                    </h2>
                    <p class="hobbies">
                        <%= cv.hobbies %>
                    </p>
                </div>
            </div>
        </section>
        <hr>
    </div>
