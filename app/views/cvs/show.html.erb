<center>
    <h1 style="text-decoration: underline; text-transform: uppercase;">student 1</h1>
</center>
<div class="">
    <div class="cv container">
        <center>
            <h1>Mon Curriculum Vitae</h1>
        </center>
        <div class="links">
            <nav class="nav flex-column">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="/moncv/<%= @cv.id %>" data-method="GET">Aperçu</a>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Editer", edit_cv_path(@cv), method: :get, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Exporter</a>
                    </li>
                </ul>
            </nav>
        </div>
        <section class="row">
            <div class="avatar col-md-4">
                <% avatar = @student.sexe == 'Homme' ? 'profilh.png' : 'profilf.png' %>
                <div class="text-center">
                    <%= image_tag avatar, class: "img-thumbnail rounded float-left" %>
                </div>
            </div>
            <div class="summary right container col-md-8">
                <h2>
                    <label>Résumé</label>
                </h2>
                <p class="summary">
                    <%= @cv.summary %>
                </p>
            </div>
        </section>
        <!-- <hr> -->
        <section class="row">
            <div class="student_infos col-md-5">
                <h2>
                    <%= @cv.developer_type %>
                </h2>
                <table class="table table-primary">
                    <tr>
                        <th>Nom complet</th>
                        <td>
                            <%= @student.lastname %>
                            <%= @student.firstname %>
                        </td>
                    </tr>
                    <tr>
                        <th>Date de naissance</th>
                        <td>
                            <%= tag.time l(@student.birthdate, format: :long) %>
                        </td>
                    </tr>
                    <tr>
                        <th>Contact</th>
                        <td>
                            <%= @student.tel %>
                        </td>
                    </tr>
                    <tr>
                        <th>Addresse</th>
                        <td>
                            <%= @student.address %>
                        </td>
                    </tr>
                    <tr>
                        <th>Sexe</th>
                        <td>
                            <%= @student.sexe %>
                        </td>
                    </tr>
                    <tr>
                        <th>Etat civil</th>
                        <td>
                            <%= @student.marital_status %>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="right col-md-7">
                <h2>
                    <%= "Experiences" %>
                </h2>
                <div class="experiences" style="display: block;">
                    <table class="table table-responsive">
                        <% @cv.experiences.each do |ex| %>
                        <% if ex %>
                        <tr class="table table-condensed">
                            <th>
                                <%= ex.name %>
                            </th>
                            <td>
                                <%= ex.description %>
                            </td>
                        </tr>
                        <% end %>
                        <% end %>
                    </table>
                </div>
            </div>
        </section>
        <!-- <hr> -->
        <section class="row">
            <div class="col-md-5">
                <h2>
                    <%= "Connaissances Techniques" %>
                </h2>
                <div class="programming_languages row">
                    <ul class="list-group">
                        <% @cv.programming_languages.each do |programming_language| %>
                        <% if programming_language %>
                        <li class="list-item">
                            <%= programming_language.name %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class="right col-md-7">
                <h2>
                    <%= "Compétences" %>
                </h2>
                <div class="skills">
                    <ul class="list-group">
                        <% @cv.skills.each do |skill| %>
                        <% if skill %>
                        <li class="list-item">
                            <%= skill.name %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
        </section>
        <section class="row">
            <div class="col-md-5">
                <h2>
                    <%= "Langues" %>
                </h2>
                <div class="languages">
                    <ul class="list-group">
                        <% @cv.languages.each do |language| %>
                        <% if language %>
                        <li class="list-item">
                            <%= language.name %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class="right col-md-7">
                <div class="hobbies">
                    <h2>
                        <%= "Passe temps" %>
                    </h2>
                    <p class="hobbies">
                        <%= @cv.hobbies %>
                    </p>
                </div>
            </div>
        </section>
        <hr>
    </div>
</div>