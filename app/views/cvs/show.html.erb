<div class="">
    <div id="<%=@cv.id%>" class="moncv cv container">
        <%= form_for @cv, method: :patch, html: {class: "updateCV", id: "updateCV"} do |f| %>
        <center>
            <h1>Mon Curriculum Vitae</h1>
        </center>
        <section class="row">
            <div class="col-md-1"></div>
            <div class="avatar col-md-3">
                <% avatar = @student.sexe == 'Homme' ? 'profilh.png' : 'profilf.png' %>
                <div class="text-center">
                    <%= image_tag avatar, class: "img-thumbnail rounded float-left" %>
                </div>
            </div>
            <div class="summary right col-md-8" style="padding: 0">
                <h2>
                    <label for="summary">Résumé</label>
                </h2>
                <div id="summaries" class="summary">
                    <p style="padding: 1%;text-align: justify;">
                        <%= @cv.summary %>
                    </p>
                </div>
            </div>
        </section>
        <div class="row">
            <section class="col-md-5">
                <div class="">
                    <div id="developer_type">
                        <center>
                            <h4>
                                <%= @cv.developer_type %>
                            </h4>
                        </center>
                    </div>
                    <div id="myprofil" class="tagHere profil" style="margin: 5% 0;">
                        <table class="table table-primary">
                            <tr>
                                <th>Nom complet</th>
                                <td>
                                    <%= @student.lastname %>
                                    <%= @student.firstname %>
                                </td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>
                                    <%= @student.birthdate.strftime("%d %B %Y") %>
                                </td>
                            </tr>
                            <tr>
                                <th>Contact</th>
                                <td>
                                    <%= @student.tel %>
                                </td>
                            </tr>
                            <tr>
                                <th>Addresse</th>
                                <td>
                                    <%= @student.address %>
                                </td>
                            </tr>
                            <tr>
                                <th>Sexe</th>
                                <td>
                                    <%= @student.sexe %>
                                </td>
                            </tr>
                            <tr>
                                <th>Etat civil</th>
                                <td>
                                    <%= @student.marital_status %>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="">
                    <h2><label for="language_name">Langues</label></h2>
                    <!--  -->
                    <div class="" id='languages'>
                        <div class='tagHere languages'>
                            <% @cv.languages.each do |language| %>
                            <% if language %>
                            <div id="<%= language.id %>" class="tag language" style="width: 100%; background: none;text-align: center;margin: 0;text-transform: capitalize;">
                                <span>
                                    <%(language.level/2).times do |id| %>
                                    <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                                    <% end%>
                                    <%=language.name%>
                                    <%(language.level/2).times do |id| %>
                                    <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                                    <% end%>
                                </span>
                            </div>
                            <% end %>
                            <% end %>
                        </div>
                    </div>
                    <!--  -->
                </div>
                <div class="">
                    <h2><label for="programming_language_name">Connaissances Techniques</label></h2>
                    <!--  -->
                    <div class="" id='programming_languages' style="padding: .5% 5%;">
                        <div class='tagHere programming_languages'>
                            <div class="row">
                                <div class="names col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                    <% @cv.programming_languages.each do |programming_language| %>
                                    <% if programming_language %>
                                    <div class="programming_language">
                                        <span>
                                            <%=programming_language.name%>
                                        </span>
                                    </div>
                                    <% end %>
                                    <% end %>
                                </div>
                                <div class="stars col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                    <% @cv.programming_languages.each do |programming_language| %>
                                    <% if programming_language %>
                                    <div class="programming_language">
                                        <% programming_language.level.times do |id| %>
                                        <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                                        <% end %>
                                        <% (7 - programming_language.level.to_i).times do |id| %>
                                        <span class="glyphicon glyphicon-star-empty" style="color: gold;"></span>
                                        <% end %>
                                    </div>
                                    <% end %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--  -->
                </div>
            </section>
            <section class="col-md-7">
                <div class="right">
                    <h2><label for="experience_name">experiences</label></h2>
                    <div id="experiences">
                        <div class="tagHere experiences">
                            <% @cv.experiences.each do |ex| %>
                            <% if ex %>
                            <div id="<%= ex.id %>" class="experience">
                                <a href="" class="close"></a>
                                <div class="name">
                                    <span>
                                        <%= ex.name %></span>
                                </div>
                                <div class="date">
                                    <label>Du</label>
                                    <span>
                                        <%= ex.start_date.strftime("%B %Y") %></span>
                                    <label>jusqu'en</label>
                                    <span>
                                        <%= ex.end_date ? ex.end_date.strftime("%B %Y") : Time.now.strftime("%B %Y") %></span>
                                </div>
                                <div class="description">
                                    <p>
                                        <%= ex.description %>
                                    </p>
                                </div>
                            </div>
                            <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <h2><label for="skill_name">compétences</label></h2>
                    <!--  -->
                    <div class="" id='skills'>
                        <div class='tagHere skills'>
                            <% @cv.skills.each do |skill| %>
                            <% if skill %>
                            <div class="tag skill">
                                <span>
                                    <%=skill.name%></span>
                            </div>
                            <% end %>
                            <% end %>
                        </div>
                    </div>
                    <!--  -->
                </div>
                <div class="right">
                    <h2><label for="background_name">éducations</label></h2>
                    <div id="backgrounds">
                        <div class="tagHere backgrounds">
                            <% @cv.backgrounds.each do |background| %>
                            <% if background %>
                            <div id="<%= background.id %>" class="background">
                                <a href="" class="close"></a>
                                <div class="name">
                                    <span>
                                        <%= background.name %></span>
                                </div>
                                <div class="date">
                                    <label>Du</label>
                                    <span>
                                        <%= background.start_date.strftime("%B %Y") %></span>
                                    <label>jusqu'en</label>
                                    <span>
                                        <%= background.end_date.strftime("%B %Y") %></span>
                                </div>
                                <div class="description">
                                    <p>
                                        <%= background.description %>
                                    </p>
                                </div>
                            </div>
                            <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <h2>
                        <label for="cv_hobbies">loisirs</label>
                    </h2>
                    <div id="hobbies" class="hobbies">
                        <div class="field hobbies">
                            <p style="padding: 1%;border: 1px solid;border-radius: 5px;margin: 0;">
                                <%= @cv.hobbies %>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <hr>
        <% end %>
    </div>
</div>