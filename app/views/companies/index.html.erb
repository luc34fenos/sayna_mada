<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Address</th>
      <th>Legal status</th>
      <th>Phone</th>
      <th>Activity area</th>
      <th>Siret</th>
      <th>Other</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.start_date %></td>
        <td><%= company.address %></td>
        <td><%= company.legal_status %></td>
        <td><%= company.phone %></td>
        <td><%= company.activity_area %></td>
        <td><%= company.siret %></td>
        <td><%= company.other %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

