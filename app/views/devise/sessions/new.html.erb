<section class="signin-up-bg">
    <div class="leftHalf" style="background-image: url('/assets/img/login-bg.jpg')">
        <div class="login-promo-txt">
            <h2>Update your brain</h2>
            <p> Hack your future!</p>
        </div>
    </div>
    <div class="rightHalf">
        <div class="position-relative">
            <!--login form-->
            <div class="login-form">
                <h2 class="text-center mb-4">
                    <img src="/assets/img/logo.png" srcset="/assets/img/logo@2x.jpg 2x" alt="CodeLab">
                </h2>
                <h4 class="text-uppercase- text-purple text-center mb-5">Se connecter</h4>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", placeholder: "Enter email" %>
                </div>
                <div class="form-group mb-4">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1", placeholder: "Enter Password" %>
                </div>
                <div class="form-group clearfix">
                    <a href="/users/password/new" data-method="GET" class="float-left forgot-link my-2">Mot de passe oublié ?</a>
                    <button type="submit" class="btn btn-purple btn-pill float-right">ENTRER</button>
                </div>
                <div class="form-divider"></div>
                <!-- <a href="#" class="btn btn-facebook btn-pill text-uppercase"><i class="fa fa-facebook-square"></i> Login with facebook</a> -->
                <div class="text-center mt-5">
                    <a href="/users/sign_up" data-method="GET" class="btn-link f12">Créer un nouveau compte</a>
                </div>
                <% end %>
            </div>
            <!--/login form-->
        </div>
    </div>
</section>
