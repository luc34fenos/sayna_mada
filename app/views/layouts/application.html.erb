<!DOCTYPE html>
<html>

<head>
    <title>SaynaMada</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application.js', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'jquery-2.1.3.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'bootstrap.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery.validate.min.js', 'data-turbolinks-track': 'reload' %>
    <%= yield :head_tag %>
</head>

<body class="<%= controller_name %> <%= action_name %>">
    <%= render template: 'home/navbar' %>
    <div class="container">
        <% if flash[:notice] %>
        <p class="alert alert-success">
            <%= notice %>
        </p>
        <% end %>
        <% if flash[:alert] %>
        <p class="alert alert-danger">
            <%= alert %>
        </p>
        <% end %>
        <%= yield %>
    </div>
</body>

</html>
